/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
       &kp F1     &gresc     &kp N1    &kp N2     &kp N3           &kp N4  &kp N5    &kp N6     &kp N7     &kp N8     &kp N9    &kp N0  &kp MINUS  &kp EQUAL  &kp BACKSLASH   &kp TILDE  &kp DEL
